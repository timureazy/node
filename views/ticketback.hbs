<h1>Вернуть билет</h1>
<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <p>{{ticket.buyerName}}</p>
          <p>{{ticket.buyerSurname}}</p>
          <p>{{ticket.buyerEmail}}</p>
          <p>Из: {{ticket.from}}</p>
          <p>В: {{ticket.to}}</p>
          <p class="price">{{ticket.price}}</p>
        </div>
        <div class="card-action">
          <form action="/ticketsback/return/:{{ticket._id}}" method="POST">
          <input type="hidden" name="id" value="{{ticket._id}}">
            <button class="btn red" type="submit">Вернуть</button>
          </form>
        
      </div>
    </div>
  </div>
 