<h1>Ваши билеты</h1>
{{#if tickets.length}}
{{#each tickets}}
<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"></span>
          <p>{{buyerName}}</p>
          <p>{{buyerSurname}}</p>
          <p>{{buyerEmail}}</p>
          <p>Из: {{from}}</p>
          <p>В: {{to}}</p>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a href="/tickets">Купить другой билет</a>
          <a href="/ticketsback/{{_id}}">Вернуть</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <p>Билетов нет</p>
  {{/if}}